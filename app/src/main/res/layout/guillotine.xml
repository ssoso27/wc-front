<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/menu_home"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <com.uuay.welcare_catcher.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/home" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_facility"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.uuay.welcare_catcher.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/facility" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_account"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <com.uuay.welcare_catcher.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/account" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_setting"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.uuay.welcare_catcher.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/setting" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_welfare"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.uuay.welcare_catcher.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/welfare" />
    </LinearLayout>
</LinearLayout>