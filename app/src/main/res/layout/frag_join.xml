<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray0"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/gray1">

        <!--id-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="이메일"/>

            <EditText
                android:id="@+id/et_email"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:hint="email" />
        </LinearLayout>

        <!--password-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="비밀번호"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:hint="password" />
        </LinearLayout>

        <!--nickname-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="닉네임"/>

            <EditText
                android:id="@+id/et_nickname"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:hint="nickname" />
        </LinearLayout>

        <!--age group-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="연령대"/>

            <Spinner
                android:id="@+id/spinner_agegroup"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/agegroup">
            </Spinner>
        </LinearLayout>

        <!--disability type-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="장애이름"/>

            <Spinner
                android:id="@+id/spinner_disability_type"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/sc_question4">
            </Spinner>
        </LinearLayout>

        <!--disability grade-->
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border_underline"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                android:text="장애등급"/>

            <Spinner
                android:id="@+id/spinner_disability_grade"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:entries="@array/sc_question5">
            </Spinner>
        </LinearLayout>

        <Button
            android:id="@+id/btn_joinpage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:text="회원가입"
            android:background="@color/gray4"
            />

    </LinearLayout>
</LinearLayout>